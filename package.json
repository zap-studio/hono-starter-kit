{
  "name": "hono-starter-kit",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "bun x ultracite check",
    "format": "bun x ultracite fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.0",
    "@scalar/hono-api-reference": "^0.9.16",
    "@scalar/openapi-to-markdown": "^0.2.30",
    "hono": "^4.9.6",
    "hono-rate-limiter": "^0.4.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@cloudflare/vitest-pool-workers": "^0.8.70",
    "@cloudflare/workers-types": "^4.20250904.0",
    "@types/node": "^24.3.1",
    "@vitest/coverage-v8": "3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "ultracite": "^5.3.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.34.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix",
      "vitest related --run"
    ]
  }
}
