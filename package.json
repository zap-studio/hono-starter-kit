{
  "name": "hono-starter-kit",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.0",
    "hono": "^4.9.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@cloudflare/vitest-pool-workers": "^0.8.69",
    "@cloudflare/workers-types": "^4.20250902.0",
    "@types/node": "^24.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "ultracite": "^5.3.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.33.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "ultracite format"
    ]
  }
}
